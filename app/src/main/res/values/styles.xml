<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:statusBarColor">?background</item>
        <item name="colorAccent">?colorPrimary</item>
    </style>

    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="boxBackgroundColor">@color/darkCardBackground</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/darkCardBackground</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="MaterialSwitch">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/actionDarkBackground</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

</resources>